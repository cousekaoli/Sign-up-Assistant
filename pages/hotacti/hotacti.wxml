<!--pages/hotacti/hotacti.wxml-->
<view class="page">
   <block wx:for="{{list}}">
    <view class="page__bd">
       
        <view class="weui-form-preview">
            <view class="weui-form-preview__hd">
               

                <view class="weui-form-preview__value_in-hd">{{item.actTitle}}</view>
            </view>
            <view class="weui-form-preview__bd">
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">活动地址</view>
                    <view class="weui-form-preview__value">{{item.actAddress}}</view>
                </view>

                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">活动内容</view>
                    <view class="weui-form-preview__value">{{item.actDetailInfo}}</view>
                </view>

                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">类型</view>
                    <view class="weui-form-preview__value">{{item.category}}</view>
                </view> 

                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">报名截止时间</view>
                    <view class="weui-form-preview__value">{{item.actSignupDeadline}}</view>
                </view>

                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">活动开始时间</view>
                    <view class="weui-form-preview__value">{{item.actStartTime}}</view>
                </view>

                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">参与人数</view>
                    <view class="weui-form-preview__value">{{item.participantsNumber}}</view>
                </view>
            
            </view>
            <view class="weui-form-preview__ft">
               
                <navigator class="weui-form-preview__btn weui-form-preview__btn_primary" hover-class="weui-form-preview__btn_active" url='../hotacti/details/details?actId={{item.actId}}'>参加此活动</navigator>
                
            
            </view>
        </view>
    </view>
    </block>
</view>